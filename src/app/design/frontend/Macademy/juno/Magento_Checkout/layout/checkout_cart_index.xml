<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="cart.summary">
            <container name="hours-container" htmlTag="div" htmlId="store-hours-container" before="copyright" after="-">
                <block name="hours" template="Juno_Theme::hours.phtml" ifconfig="general/store_information/hours" before="-">
                    <arguments>
                        <argument name="hours_view_model" xsi:type="object">Juno\Theme\ViewModel\Hours</argument>
                    </arguments>
                </block>
                <block name="phone-number-for-checkout" template="Juno_Theme::phone-number.phtml" ifconfig="general/store_information/phone">
                    <arguments>
                        <argument name="phone_number_view_model" xsi:type="object">Juno\Theme\ViewModel\PhoneNumber</argument>
                    </arguments>
                </block>
            </container>
            <container name="shipping-notice-container" htmlTag="div" htmlClass="shipping-notice-container">
                <block name="shipping-notice" template="Juno_Theme::shipping-notice.phtml"/>
            </container>
        </referenceContainer>
    </body>
</page>
