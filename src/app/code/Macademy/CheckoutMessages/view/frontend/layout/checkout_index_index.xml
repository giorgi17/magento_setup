<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <referenceBlock name="checkout.root">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="checkout" xsi:type="array">
                                <item name="children" xsi:type="array">
                                    <item name="sidebar" xsi:type="array">
                                        <item name="children" xsi:type="array">
                                            <item name="shippingTime" xsi:type="array">
                                                <item name="component" xsi:type="string">Macademy_CheckoutMessages/js/view/summary/shipping-time</item>
                                                <item name="config" xsi:type="array">
                                                    <item name="template" xsi:type="string">
                                                        Macademy_CheckoutMessages/summary/shipping-time
                                                    </item>
                                                    <item name="displayArea" xsi:type="string">extra</item>
                                                    <item name="shippingAddressProvider" xsi:type="string">
                                                        checkoutProvider:shippingAddress
                                                    </item>
                                                    <item name="deps" xsi:type="array">
                                                        <item name="0" xsi:type="string">checkout.sidebar.guarantee</item>
                                                        <item name="1" xsi:type="string">checkout.sidebar.summary</item>
                                                    </item>
                                                </item>
                                            </item>

                                            <item name="guarantee" xsi:type="array">
                                                <item name="component" xsi:type="string">Macademy_CheckoutMessages/js/view/summary/guarantee</item>
                                                <item name="config" xsi:type="array">
                                                    <item name="template" xsi:type="string">
                                                        Macademy_CheckoutMessages/summary/guarantee
                                                    </item>
                                                    <item name="displayArea" xsi:type="string">extra</item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </referenceBlock>
        </referenceContainer>
    </body>
</page>
